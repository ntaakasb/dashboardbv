            var ctx = document.getElementById('chart-cacapcuu').getContext('2d');
            window.myMixedChart = new Chart(ctx, {
                type: 'bar',
                data: chartDataCaCapCuu,
                options: {
                    responsive: true,
                    title: {
                        display: true,
                    },
                    tooltips: {
                        mode: 'index',
                        intersect: true
                    }
                }
            });
        };



    </script>
