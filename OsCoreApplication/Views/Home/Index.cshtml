        var cacapcuu = [];
        var canguykich = [];
        for (var i = 0; i <= 7; i++) {
            var num = randomCa();
            cacapcuu.push(num);
            var temp = num - Math.round(Math.random() * 1);
            var cnk = temp < num ? temp : 0
            canguykich.push(cnk);
        }

        var chartDataCaCapCuu = {
            labels: ['Thứ 2', 'Thứ 3', 'Thứ 5', 'Thứ 5', 'Thứ 6', 'Thứ 7', 'chủ nhật'],
