                type: 'line',
                label: 'Số ca cấp cứu',
                borderColor: window.chartColors.blue,
                borderWidth: 2,
                fill: false,
                data: cacapcuu
            }, {
                type: 'bar',
                label: 'Ca nguy kịch',
                backgroundColor: window.chartColors.red,
                    data: canguykich,
                borderColor: 'white',
                borderWidth: 2
            }]

        };
